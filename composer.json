{
    "name": "cceconi/hexa-generator",
    "description": "Binary to generate hexagonal architecture compliant classes for hexa-lib",
    "type": "binary",
    "keywords": [
        "hexagonal",
        "architecture",
        "ddd",
        "generator",
        "hexa-lib"
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Apido\\HexaGenerator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Apido\\Tests\\HexaGenerator\\": "tests/"
        }
    },
    "bin": ["bin/hg", "bin/hg.php"],
    "authors": [
        {
            "name": "Christian CECONI"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=7.4",
        "symfony/console": "^5.4",
        "cceconi/hexa-lib": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6"
    }
}
